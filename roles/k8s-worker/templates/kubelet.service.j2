[Unit]
Description=Kubernetes Kubelet
Documentation=https://github.com/GoogleCloudPlatform/kubernetes

[Service]
Restart=always
RestartSec=10
ExecStartPre=/usr/bin/mkdir -p /etc/kubernetes/manifests
Environment=KUBELET_VERSION={{ kubernetes_version }}
ExecStart=/opt/bin/kubelet-wrapper \
  --api_servers={{ k8s_master }} \
  --register-node=true \
  --allow-privileged=true \
  --config=/etc/kubernetes/manifests \
  --hostname-override={{ inventory_hostname }} \
  --cluster_dns={{ kubernetes_dns_service_ip }} \
  --cluster_domain=cluster.local \
  --kubeconfig={{ kubernetes_config_dir }}/worker-kubeconfig.yaml \
  --tls-cert-file={{ kubernetes_cert_dir }}/worker.pem \
  --tls-private-key-file={{ kubernetes_cert_dir }}/worker-key.pem

[Install]
WantedBy=multi-user.target
